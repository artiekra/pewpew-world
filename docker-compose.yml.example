services:
  backend:
    build:
      context: .
      dockerfile: Dockerfile.backend
    container_name: ppworld-backend
    ports:
      - "8090:8000"
    networks:
      - shared_proxy
    volumes:
      - ./storage:/storage
      - ./.env:/app/.env
    restart: unless-stopped
    command: python backend/main.py

  data:
    build:
      context: .
      dockerfile: Dockerfile.backend
    volumes:
      - ./storage:/storage
      - ./.env:/app/.env
    command: python data/main.py

  frontend:
    build:
      context: .
      dockerfile: Dockerfile.frontend
    container_name: ppworld-frontend
    ports:
      - "3090:3000"
    networks:
      - shared_proxy
    volumes:
      - ./.env:/.env
    restart: unless-stopped

networks:
  shared_proxy:
    external: true
